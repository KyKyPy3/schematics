{
    "$scheme": "http://json-schema.org/schema",
    "id": "SampleSchematicsSchema",
    "title": "My Sample Schematics Schema",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "User name",
            "$default": {
                "$source": "argv",
                "index": 0
            }
        },
        "path": {
            "type": "string",
            "format": "path",
            "description": "The path to create the class.",
            "visible": false
        },
        "type": {
            "type": "string",
            "description": "Specifies the type of class.",
            "default": ""
        },
        "spec": {
            "type": "boolean",
            "description": "Should we create spec file.",
            "default": false
        }
    },
    "required": []
}